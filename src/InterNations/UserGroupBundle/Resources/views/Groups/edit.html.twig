{% extends 'base.html.twig' %}

{% block body %}
    <div class="main">
        <div class="container">
            <div class="page-header">
                <h1>Group edit</h1>
                <hr>
            </div>

            {{ form_start(edit_form) }}
            <div class="row form-group">
                <div class="col-md-3 text-right font-weight-bold">{{ form_label(edit_form.name, "Group Name") }}</div>
                <div class="col-md-6">{{ form_widget(edit_form.name) }}</div>
            </div>

            <div class="row form-group">
                <div class="col-md-3 text-right font-weight-bold"></div>
                <div class="col-md-6 align-right text-right"><input type="submit" value="Save" /></div>
            </div>

            {{ form_end(edit_form) }}

            <div class="row form-group">
                <ul>
                    <li>
                        <a href="{{ path('groups_index') }}">Back to the list</a>
                    </li>
                    {% if delete_form is defined %}
                    <li>
                        {{ form_start(delete_form) }}
                            <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    
{% endblock %}
